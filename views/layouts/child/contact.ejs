  <script>
    $(document).ready(function(){
      LoadContact('phone');
      LoadContact('email');
      LoadContact('skype');
      LoadContact('facebook');
      LoadContact('twitter');
    })

    function LoadContact(key){
      $.ajax({
        url:'/contact',
        type:'get',
        data:{
          key
        },
        success:function(data){
          $('#'+key).text(data.config.value)
        }
      })
    }
  </script>