<div class="row">
    <div class="col-sm-4">
        <input type="text" placeholder="Tên quốc tịch" id="txtName" class="form-control">
    </div>
    <div class="col-sm-2">
        <button class="btn btn-success" id="btnAddNew">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Create
        </button>
    </div>
</div>
<table class="table table-dark mt-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên quốc gia</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="tblContent"></tbody>
</table>


<script>
    $(document).ready(function () {
        LoadNationalities();
    })

    $('#btnAddNew').click(function(){
        let name = $('#txtName').val();
        if(name.trim().length == 0){
            alert('Vui lòng nhập tên quốc gia!');
            return;
        }
        $.ajax({
            url: '/admin/don-vi-hanh-chinh',
            type: 'post',
            headers: {
                Authorization: "Covid-19 " + getACCESS_TOKEN()
            },
            data:{
                name
            },
            success:function(data){
                alert(data.msg);
                LoadNationalities();
            }, error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.responseJSON.msg);
            },
        })
    })

    function LoadNationalities() {
        $.ajax({
            url: '/admin/don-vi-hanh-chinh/list',
            type: 'get',
            headers: {
                Authorization: "Covid-19 " + getACCESS_TOKEN()
            },
            success: function (data) {
                let idx = 1;
                $('#tblContent').empty();
                data.nats.forEach(n => {
                    let tr = '<tr id="' + n._id + '" data-name= "' + n.name + '">';
                    tr += '<td>' + (idx++) + '</td>';
                    tr += '<td>' + n.name + '</td>';
                    tr += '<td>';
                    tr += '</td>';
                    tr += '</tr>';
                    $('#tblContent').append(tr);
                })

            }, error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.responseJSON.msg);
            },
        })
    }
</script>