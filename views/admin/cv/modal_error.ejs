<div class="modal" tabindex="-1" role="dialog" id="modalError">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-info" id="title_error">Thiết lập lỗi của hồ sơ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body container">
                <div class="form-group">
                    <label for="">
                        Lỗi hồ sơ
                    </label>
                    <input type="text" name="" id="txtError" class="form-control">
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSubmitError">
                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                    Xác nhận
                </button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
            </form>

        </div>
    </div>
</div>

<script>
    $('#btnSubmitError').click(function () {
        let err = $('#txtError').val();
        if (err.trim().length == 0) {
            alert('Vui lòng nhập lỗi hồ sơ!');
            return;
        }

        $.ajax({
            url: '/admin/ho-so/error',
            type: 'put',
            headers: {
                Authorization: "Covid-19 " + getACCESS_TOKEN()
            },
            data: {
                cvId,
                err
            },
            success: function (data) {
                alert(data.msg);
                $('#modalError').modal('hide');
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(jqXHR.responseJSON.msg);
            },
        })
    })
</script>