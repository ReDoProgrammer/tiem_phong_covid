<div class="modal" tabindex="-1" role="dialog" id="modalDept">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-info" id="title_unit">Thêm mới đơn vị</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body container">

                <div class="row">
                    <div class="col-sm-12">
                        <input type="text" name="Name" id="txtDeptName" class="form-control" placeholder="Tên đơn vị">
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-success" id="btnSubmitDept">Xác nhận</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
            </form>

        </div>
    </div>
</div>

<script>

    $('#btnSubmitDept').click(function () {
        let name = $('#txtDeptName').val().trim();
        if (name.length == 0) {
            alert('Vui lòng nhập tên đơn vị!');
            return;
        }
        $.ajax({
            url: '/dept',
            type: 'post',
            headers: {
                Authorization: "Covid-19 " + getACCESS_TOKEN()
            },
            data: {
                name
            },
            success: function (data) {
                alert(data.msg);
                $('#modalDept').modal('hide');
            }
        })
    })

    $('#modalDept').on('hidden.bs.modal', function () {
        $('#modalAccount').modal();
        LoadDepartment();
    })


</script>